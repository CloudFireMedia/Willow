<% if current_user %>
  <span class="ml-3"><%= current_user.email %></span>
  <a class="btn btn-primary m-3" href="/logout" role="button">Sign out</a>
  <div class="nav nav-tabs justify-content-center pt-3" role="tablist">
    <a id="folders-tab" class="nav-item nav-link active" href="#folders" data-toggle="tab" role="tab" aria-controls="folders" aria-selected="true">Folders</a>
    <a id="trash-tab" class="nav-item nav-link" href="#trash" data-toggle="tab" role="tab" aria-controls="trash" aria-selected="false">Trash</a>
    <a id="info-tab" class="nav-item nav-link" href="#info" data-toggle="tab" role="tab" aria-controls="info" aria-selected="false">Info</a>
  </div>
  <div class="tab-content pt-3 pl-3 pr-3">
    <div id="folders" class="tab-pane fade show active" role="tabpanel" aria-labelledby="folders-tab">
      <div class="row h-100">
        <div class="col-5">
          <div class="card">
            <div class="card-header">
              Folders
            </div>
            <div class="card-body p-0">
              <div class="list-group list-group-flush">
                <div class="list-group-item">
                  <i class="fas fa-folder fa-lg"></i>
                  111
                </div>
                <div class="list-group-item">
                  <i class="fas fa-folder fa-lg"></i>
                  222
                </div>
                <div class="list-group-item">
                  <i class="fas fa-folder fa-lg"></i>
                  333
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="btn-group">
                <a class="btn btn-secondary" href="#" role="button" data-toggle="modal" data-target="#choose_folder">
                  <i class="far fa-plus fa-fw"></i>
                </a>
                <a class="btn btn-secondary" href="#" role="button">
                  <i class="far fa-minus fa-fw"></i>
                </a>
              </div>
              <a class="btn btn-secondary" href="#" role="button" data-toggle="modal" data-target="#folder_rules">
                <i class="far fa-eye fa-fw"></i>
              </a>
              <a class="btn btn-secondary" href="#" role="button">
                <i class="far fa-cogs fa-fw"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="col-7">
          <div class="card">
            <div class="card-header">
              Rules
            </div>
            <div class="card-body p-0">
              <div class="list-group list-group-flush">
                <div class="list-group-item form-check pl-5">
                  <input id="rule_1" class="form-check-input" type="checkbox" value="1"/>
                  <label class="form-check-label" for="rule_1">Rule 1</label>
                </div>
                <div class="list-group-item form-check pl-5">
                  <input id="rule_2" class="form-check-input" type="checkbox" value="2"/>
                  <label class="form-check-label" for="rule_2">Rule 2</label>
                </div>
                <div class="list-group-item form-check pl-5">
                  <input id="rule_3" class="form-check-input" type="checkbox" value="3"/>
                  <label class="form-check-label" for="rule_3">Rule 3</label>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="btn-group">
                <a class="btn btn-secondary" href="#" role="button" data-toggle="modal" data-target="#rule_options">
                  <i class="far fa-plus fa-fw"></i>
                </a>
                <a class="btn btn-secondary" href="#" role="button">
                  <i class="far fa-minus fa-fw"></i>
                </a>
              </div>
              <a class="btn btn-secondary" href="#" role="button" data-toggle="modal" data-target="#rule_options">
                <i class="far fa-pen fa-fw"></i>
              </a>
            </div>
          </div>
          <div class="card mt-3">
            <div class="card-header">
              Throw away:
            </div>
            <div class="card-body">
              <div class="form-group form-check">
                <input id="duplicate" class="form-check-input" type="checkbox"/>
                <label class="form-check-label" for="duplicate">Duplicate files</label>
              </div>
              <div class="form-inline">
                <div class="form-check">
                  <input id="downloads" class="form-check-input" type="checkbox"/>
                  <label class="form-check-label" for="downloads">Incomplete downloads after</label>
                </div>
                <div class="form-group ml-4">
                  <input id="count" class="form-control form-control-sm" type="text" value="1"/>
                </div>
                <div class="form-group ml-2">
                  <select id="period" class="custom-select custom-select-sm">
                    <option value="0">Hour</option>
                    <option value="1">Day</option>
                    <option value="2" selected>Week</option>
                    <option value="3">Month</option>
                    <option value="4">Year</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="trash" class="tab-pane fade" role="tabpanel" aria-labelledby="trash-tab">
      Trash
    </div>
    <div id="info" class="tab-pane fade" role="tabpanel" aria-labelledby="info-tab">
      Info
    </div>
  </div>

  <!-- RuleOptionsDlg -->
  <div id="rule_options" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="RuleOptionsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">[FolderName]</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group row">
            <label for="rule_name" class="col-1 col-form-label">Name:</label>
            <div class="col-11">
              <input id="rule_name" class="form-control" type="text" value=""/>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-9">
              <span>If</span>
              <select id="" class="form-control d-inline w-auto">
                <option value="0">all</option>
                <option value="1">any</option>
                <option value="2">none</option>
              </select>
              <span>of the following conditions are met</span>
            </div>
            <div class="col-3 text-right">
              <a class="btn btn-secondary" href="#" role="button">Preview</a>
            </div>
          </div>
          <div class="row">
            <div class="col-9">
              <div class="form-inline">
                <div class="form-group mr-2">
                  <select id="" class="form-control">
                    <option value="0">Name</option>
                    <option value="1">Extension</option>
                    <option value="2">Full Name</option>
                  </select>
                </div>
                <div class="form-group mr-2 w-auto">
                  <select id="" class="form-control">
                    <option value="0">is</option>
                    <option value="1">is not</option>
                    <option value="2">contains</option>
                    <option value="3">does not contain</option>
                    <option value="4">starts with</option>
                    <option value="5">does not start with</option>
                    <option value="6">ends with</option>
                    <option value="7">does not end with</option>
                    <option value="8">matches</option>
                    <option value="9">does not match</option>
                    <option value="10">did change</option>
                    <option value="11">did not change</option>
                    <option value="12">is blank</option>
                    <option value="13">is not blank</option>
                  </select>
                </div>
                <div class="form-group mr-2">
                  <input id="" class="form-control" type="text" value=""/>
                </div>
              </div>
            </div>
            <div class="col-3 text-right">
              <div class="form-group">
                <div class="btn-group">
                  <a class="btn btn-secondary" href="#" role="button">
                    <i class="far fa-plus fa-fw"></i>
                  </a>
                  <a class="btn btn-secondary" href="#" role="button">
                    <i class="far fa-minus fa-fw"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-2">Do the following to the matched file or folder:</div>
          <div class="form-group row">
            <div class="col-9">
              <div class="form-inline">
                <div class="form-group mr-4">
                  <select id="" class="form-control">
                    <option value="0">Move</option>
                    <option value="1">Copy</option>
                    <option value="2">Rename</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="target_folder" class="form-label mr-2">to folder:</label>
                  <select id="target_folder" class="form-control">
                    <option value="0">111</option>
                    <option value="1">222</option>
                    <option value="2">333</option>
                    <option value="2">444</option>
                    <option value="2">555</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-3 text-right">
              <div class="form-group">
                <div class="btn-group">
                  <a class="btn btn-secondary" href="#" role="button">
                    <i class="far fa-plus fa-fw"></i>
                  </a>
                  <a class="btn btn-secondary" href="#" role="button">
                    <i class="far fa-minus fa-fw"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary">OK</button>
        </div>
      </div>
    </div>
  </div>

  <!-- FolderRulesDlg -->
  <div id="folder_rules" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ChooseFolderLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">FolderRulesDlg</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          [BODY]
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">OK</button>
        </div>
      </div>
    </div>
  </div>

  <!-- ChooseFolderDlg -->
  <div id="choose_folder" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ChooseFolderLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">ChooseFolderDlg</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="list-group">
            <% @user_files.files.each do |user_file| %>
              <a class="list-group-item list-group-item-action" href="#" role="button"><%= user_file.name %></a>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary">Open</button>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <a class="btn btn-primary m-3" href="/auth/google_oauth2" role="button">Sign in with Google</a>
<% end %>